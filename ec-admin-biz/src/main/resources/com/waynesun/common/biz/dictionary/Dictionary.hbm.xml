<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.fusioninfo.common.biz.dictionary.Dictionary" table="sys_dictionary">
		<cache usage="read-write"/>
		<id name="id" column="dictionary_id" >
			<generator class="identity"/>
		</id>
		<discriminator column="discriminator"/>
		<version name="version" column="version"/>
		<property name="createTime" column="create_time"/>
		<property name="updateTime" column="update_time"/>
		<many-to-one name="createUser" column="create_user" class="com.fusioninfo.common.biz.user.AbstractUser"/>
		<many-to-one name="updateUser" column="update_user" class="com.fusioninfo.common.biz.user.AbstractUser"/>
		<property name="state" type="com.fusioninfo.pojo.type.PojoStateType"/>
		<property name="name"/>
		<subclass name="com.fusioninfo.common.biz.dictionary.DictionaryCategory" discriminator-value="0">
			<property name="code"/>
			<set name="dictionaryItems" order-by="create_time ASC">
				<key column="parent_id"/>
				<one-to-many class="com.fusioninfo.common.biz.dictionary.DictionaryItem"/>
			</set>
		</subclass>
		<subclass name="com.fusioninfo.common.biz.dictionary.DictionaryItem" discriminator-value="1">
			<property name="value"/>
			<many-to-one name="parent" column="parent_id" class="com.fusioninfo.common.biz.dictionary.DictionaryCategory"/>
		</subclass>
	</class>
</hibernate-mapping>